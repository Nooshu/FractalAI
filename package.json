{
  "name": "fractalai",
  "version": "1.0.0",
  "description": "A web-based fractal generator using regl and WebGL",
  "type": "module",
  "engines": {
    "node": ">=24.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,json,css,html,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,css,html,md}\"",
    "stylelint": "stylelint \"**/*.css\"",
    "stylelint:fix": "stylelint \"**/*.css\" --fix",
    "check": "npm run lint && npm run format:check && npm run stylelint",
    "verify": "npm ci && npm audit --audit-level=moderate",
    "audit": "npm audit",
    "test:visual": "playwright test",
    "test:visual:update": "playwright test --update-snapshots",
    "test:visual:ui": "playwright test --ui",
    "test:visual:report": "playwright show-report"
  },
  "dependencies": {
    "regl": "2.1.1"
  },
  "devDependencies": {
    "vite": "7.2.2",
    "eslint": "9.39.1",
    "prettier": "3.6.2",
    "stylelint": "16.25.0",
    "stylelint-config-standard": "39.0.1",
    "@playwright/test": "^1.48.0"
  }
}

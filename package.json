{
  "name": "fractalai",
  "version": "1.0.0",
  "description": "A web-based fractal generator with 2D and 3D support using regl",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write \"**/*.{js,json,css,html,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,css,html,md}\"",
    "stylelint": "stylelint \"**/*.css\"",
    "stylelint:fix": "stylelint \"**/*.css\" --fix",
    "check": "npm run lint && npm run format:check && npm run stylelint",
    "verify": "npm ci && npm audit --audit-level=moderate",
    "audit": "npm audit"
  },
  "dependencies": {
    "regl": "^2.1.0"
  },
  "devDependencies": {
    "vite": "5.4.21",
    "eslint": "8.57.1",
    "prettier": "3.6.2",
    "stylelint": "16.25.0",
    "stylelint-config-standard": "36.0.1"
  }
}

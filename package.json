{
  "name": "fractalai",
  "version": "3.0.0",
  "description": "A web-based fractal generator using regl and WebGL",
  "license": "CC-BY-4.0",
  "type": "module",
  "engines": {
    "node": ">=24.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "node scripts/generate-presets-manifest.js && vite",
    "build": "node scripts/generate-presets-manifest.js && vite build",
    "preview": "vite preview",
    "generate-manifest": "node scripts/generate-presets-manifest.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,json,css,html,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,css,html,md}\"",
    "stylelint": "stylelint \"**/*.css\"",
    "stylelint:fix": "stylelint \"**/*.css\" --fix",
    "check": "npm run lint && npm run format:check && npm run stylelint",
    "verify": "npm ci && npm audit --audit-level=moderate",
    "audit": "npm audit",
    "test": "vitest",
    "test:unit": "vitest tests/unit",
    "test:watch": "vitest --watch",
    "test:visual": "playwright test",
    "test:visual:update": "playwright test --update-snapshots",
    "test:visual:ui": "playwright test --ui",
    "test:visual:report": "playwright show-report"
  },
  "dependencies": {
    "regl": "2.1.1",
    "piexifjs": "1.0.6"
  },
  "devDependencies": {
    "@playwright/test": "1.57.0",
    "eslint": "9.39.1",
    "jsdom": "27.2.0",
    "prettier": "3.6.2",
    "stylelint": "16.26.0",
    "stylelint-config-standard": "39.0.1",
    "vite": "7.2.4",
    "vitest": "4.0.13"
  }
}

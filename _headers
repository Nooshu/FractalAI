# Root path and index.html - preload critical resources
/
  Link: <https://en.wikipedia.org>; rel=dns-prefetch

/index.html
  Link: <https://en.wikipedia.org>; rel=dns-prefetch

# Service Worker - never cache (critical for updates)
/sw.js
  Cache-Control: no-cache, no-store, must-revalidate, max-age=0
  Pragma: no-cache
  Expires: 0

# HTML files - short cache with stale-while-revalidate for better performance
/*.html
  Cache-Control: public, max-age=0, must-revalidate, stale-while-revalidate=86400
  X-Content-Type-Options: nosniff
  X-Frame-Options: DENY
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: geolocation=(), microphone=(), camera=(), payment=(), usb=(), magnetometer=(), gyroscope=(), accelerometer=()
  Cross-Origin-Opener-Policy: same-origin
  Content-Security-Policy: default-src 'self'; img-src 'self' data: blob:; script-src 'self'; style-src 'self' 'unsafe-inline'; connect-src 'self'; object-src 'none'; base-uri 'self'; form-action 'self'; frame-ancestors 'none'
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload
  Accept-Ranges: bytes

# CSS files - cache with revalidation (no immutable)
/*.css
  Cache-Control: public, max-age=31536000, must-revalidate, stale-while-revalidate=86400
  Content-Type: text/css; charset=utf-8
  X-Content-Type-Options: nosniff
  Accept-Ranges: bytes
  Vary: Accept-Encoding

# JavaScript files - cache with revalidation (no immutable)
/*.js
  Cache-Control: public, max-age=31536000, must-revalidate, stale-while-revalidate=86400
  Content-Type: application/javascript; charset=utf-8
  X-Content-Type-Options: nosniff
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload
  Accept-Ranges: bytes
  Vary: Accept-Encoding

# Brotli-compressed files
/*.br
  Content-Encoding: br
  Cache-Control: public, max-age=31536000, immutable
  Vary: Accept-Encoding

# Images - long cache with immutable-like behavior
/*.png
  Cache-Control: public, max-age=31536000, immutable
  Accept-Ranges: bytes
/*.jpg
  Cache-Control: public, max-age=31536000, immutable
  Accept-Ranges: bytes
/*.jpeg
  Cache-Control: public, max-age=31536000, immutable
  Accept-Ranges: bytes
/*.gif
  Cache-Control: public, max-age=31536000, immutable
  Accept-Ranges: bytes
/*.svg
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: image/svg+xml; charset=utf-8
  Accept-Ranges: bytes
/*.webp
  Cache-Control: public, max-age=31536000, immutable
  Accept-Ranges: bytes
/*.ico
  Cache-Control: public, max-age=31536000, immutable
  Accept-Ranges: bytes

# Web manifest and other JSON files
/*.json
  Cache-Control: public, max-age=3600
  Content-Type: application/json; charset=utf-8

# Web manifest specifically
/site.webmanifest
  Cache-Control: public, max-age=3600
  Content-Type: application/manifest+json; charset=utf-8

# Assets directory - apply to all assets
/assets/*
  Cache-Control: public, max-age=31536000, must-revalidate, stale-while-revalidate=86400
  Accept-Ranges: bytes

